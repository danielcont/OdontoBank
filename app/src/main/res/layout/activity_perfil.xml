<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Perfil"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="@drawable/background_profile_picture"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/regresar" />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/foto"
                android:layout_marginTop="-5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="126dp"
                android:layout_height="134dp"
                android:src="@drawable/default_profile_picture"
                android:onClick="handleImageClick"
                app:civ_border_width="2dp"
                app:civ_border_color="#22303b"/>

            <TextView
                android:id="@+id/profile_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/thin"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-65dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#ed5c79"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/regular"
                    android:text="Mis publicaciones"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>
            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#ed5c79"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/regular"
                    android:text="Crear publicación"
                    android:textColor="@color/white"
                    android:textSize="15sp"/>

            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="218dp"
                android:layout_height="82dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="131dp"
                android:fontFamily="@font/bold"
                android:text="Información Personal"
                android:textColor="@color/grey"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/pCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="105dp"
                android:layout_marginEnd="26dp"
                android:fontFamily="@font/regular"
                android:text="Correo: "
                android:textColor="@color/gradient_grey"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/pNombre"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="135dp"
                android:layout_marginEnd="55dp"
                android:fontFamily="@font/regular"
                android:text="Nombre: "
                android:textColor="@color/gradient_grey"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/pApellido"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="165dp"
                android:layout_marginEnd="55dp"
                android:fontFamily="@font/regular"
                android:text="Apellido: "
                android:textColor="@color/gradient_grey"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/pCarrera"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="25dp"
                android:layout_marginTop="195dp"
                android:layout_marginEnd="55dp"
                android:fontFamily="@font/regular"
                android:text="Carrera: "
                android:textColor="@color/gradient_grey"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_below="@+id/pCarrera"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="298dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="113dp"
                app:srcCompat="@drawable/edit" />

            <TextView
                android:id="@+id/pEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pCarrera"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="73dp"
                android:fontFamily="@font/regular"
                android:text="Editar"
                android:textColor="@color/red"
                android:textSize="15dp" />


        </RelativeLayout>

    </LinearLayout>


</LinearLayout>